.panel-table
  .panel-body
    padding 0
    .table-bordered
      border-style none
      margin 0
      & > thead
        & > tr
          & > th
            &:first-of-type
              text-align center
              width 100px
          &:first-of-type
            & > th
              border-top 0
      & > tbody
        & > tr
          &:first-of-type
            & > td
              border-bottom 0
          & > td
            line-height 34px
  .panel-footer
    .pagination
      margin 0
    .col
      line-height 34px
      height 34px
  .panel-heading
    .col
      h3
        line-height 30px
        height 30px

.panel-table .panel-body .table-bordered > thead > tr > th:last-of-type,
.panel-table .panel-body .table-bordered > tbody > tr > td:last-of-type
  border-right 0

.panel-table .panel-body .table-bordered > thead > tr > th:first-of-type,
.panel-table .panel-body .table-bordered > tbody > tr > td:first-of-type
  border-left 0

